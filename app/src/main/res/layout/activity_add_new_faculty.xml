<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E1EA"
    tools:context=".AddNewFaculty">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/ic_wave"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Faculty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"
        android:textStyle="bold"
        android:textSize="40sp"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="380dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/card_bg"
        android:layout_marginTop="170dp">


        <EditText
            android:id="@+id/faculty_email_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            android:fontFamily="@font/archivo_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>


        <EditText
            android:id="@+id/faculty_name_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Name"
            android:textSize="16sp"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            android:fontFamily="@font/archivo_black"
            app:layout_constraintTop_toBottomOf="@id/faculty_email_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />


        <EditText
            android:id="@+id/faculty_number_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Phone Number"
            android:textSize="16sp"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            android:fontFamily="@font/archivo_black"
            app:layout_constraintTop_toBottomOf="@id/faculty_name_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <EditText
            android:id="@+id/faculty_dept_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Department"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            android:fontFamily="@font/archivo_black"
            app:layout_constraintTop_toBottomOf="@id/faculty_number_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <Button
            android:id="@+id/add_faculty_register_btn"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:text="Register"
            android:background="@drawable/button_bg"
            android:textColor="@color/white"
            android:fontFamily="@font/archivo_black"
            app:layout_constraintTop_toBottomOf="@id/faculty_dept_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>