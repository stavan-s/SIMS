<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDefaulters">

    <TextView
        android:id="@+id/view_defaulters_title_display"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:text="Defaulters List"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/amaranth"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ListView
        android:id="@+id/view_defaulters_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_defaulters_title_display"
        app:layout_constraintBottom_toTopOf="@id/view_defaulters_generate_pdf_btn"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/view_defaulters_generate_pdf_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/amaranth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Generate Report"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>