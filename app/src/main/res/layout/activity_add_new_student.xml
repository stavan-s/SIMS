<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E1EA"
    tools:context=".AddNewStudent">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/ic_wave"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"
        android:textStyle="bold"
        android:textSize="35sp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="640dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/card_bg"
        android:layout_marginTop="70dp">


        <EditText
            android:id="@+id/student_email_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Email"
            android:fontFamily="@font/archivo_black"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/card_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_name_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Full Name"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            app:layout_constraintTop_toBottomOf="@id/student_email_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_dept_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Department"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="@drawable/card_bg"
            app:layout_constraintTop_toBottomOf="@id/student_name_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_class_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Class"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:background="@drawable/card_bg"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/student_dept_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_div_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:hint="Division"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:background="@drawable/card_bg"
            app:layout_constraintTop_toBottomOf="@id/student_class_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>


        <EditText
            android:id="@+id/student_roll_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="number"
            android:hint="Roll No"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:background="@drawable/card_bg"
            app:layout_constraintTop_toBottomOf="@id/student_div_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_own_number_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Student's Number"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:background="@drawable/card_bg"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/student_roll_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/student_parent_number_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Parent's Number"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_black"
            android:background="@drawable/card_bg"
            android:textAlignment="center"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/student_own_number_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/add_student_submit_button"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Register"
            android:textStyle="bold"
            android:fontFamily="@font/archivo_black"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@id/student_parent_number_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>